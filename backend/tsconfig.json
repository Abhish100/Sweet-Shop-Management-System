{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "lib": ["ES2020", "DOM"],
    "types": ["node"],

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "src/tests",
    "**/*.test.ts"
  ]
}
